<!-- Simple discrete 2D diffusion model -->

<beast version='2.0' namespace='master:master.model:master.outputs:master.steppers'>
    <run spec='Trajectory'
         simulationTime='30'
         nSamples="100"
         verbosity='2'>
        
        <!--stepper spec='GillespieStepper' /-->
        <!--stepper spec='SALStepper' stepSize="0.1" /-->
        <stepper spec='RateEquationStepper' stepSize="0.1" />

        <model spec='Model' id='model'>
        
            <!-- Genes, proteins, gene-protein complexes -->
            <population spec='Population' populationName="n" id="n"/>
            <population spec='Population' populationName="nn" id="nn"/>
            <population spec='Population' populationName="a" id="a"/>
            <population spec='Population' populationName="aa" id="aa"/>

            <!-- Food-generated replication reaction (not initially catalysed) -->
            <reaction spec='Reaction' reactionName="FoodGenerated" rate="0.1">
                2n -> nn
            </reaction> 

            <!-- Replication reaction (catalysed by template and replicase) -->
            <reaction spec='Reaction' reactionName="Replication" rate="0.2">
                2n + nn + aa -> 2(nn) + aa
            </reaction> 
                        
            <!-- Food-generated translation reaction (not initially catalysed) -->           
            <reaction spec='Reaction' reactionName="Translation0" rate="0.1">
                2a -> aa
            </reaction>
            
            <!-- Translation reaction (catalysed by coding template and translatase) -->  
            <reaction spec='Reaction' reactionName="Translation1" rate="0.3">
                2a + aa + nn -> 2(aa) + nn
            </reaction>

            <!-- Degradation reactions (spontaneous) -->
            <reaction spec='Reaction' reactionName="DeathToG" rate="0.05">
                nn -> 2n
            </reaction>
            <reaction spec='Reaction' reactionName="DeathToP" rate="0.05">
                aa -> 2a
            </reaction>
            
            <!-- Degradation reactions (catalysed by "collisions") -->
            <reaction spec='Reaction' reactionName="DeathToG" rate="0.1">
                2(nn) -> 4n
            </reaction>
            <reaction spec='Reaction' reactionName="DeathToP" rate="0.1">
                2(aa) -> 4a
            </reaction>        
        </model>

        <initialState spec='InitState'>
            <populationSize spec='PopulationSize' population='@n' size='100'/>
            <populationSize spec='PopulationSize' population='@a' size='100'/>
            <populationSize spec='PopulationSize' population='@nn' size='0'/>
            <populationSize spec='PopulationSize' population='@aa' size='0'/>
        </initialState>
        
        <output spec='JsonOutput' fileName='$(filebase)_output.json'/>
    </run>
</beast>
