<!-- Simple discrete 2D diffusion model -->

<beast version='2.0' namespace='master:master.model:master.outputs:master.steppers'>
    <run spec='Trajectory'
         simulationTime='100'
         nSamples="100">
        
        <stepper spec='GillespieStepper'/>
        <!--<stepper spec='SALStepper' stepSize="0.1" />
        <stepper spec='RateEquationStepper' stepSize="0.1" />-->

        <model spec='Model' id='model'>
        
            <!-- Genes, proteins, gene-protein complexes -->
            <populationType spec='PopulationType' typeName="Gaaa" dim="3" id="Gmmm"/>
            <populationType spec='PopulationType' typeName="Gbbb" dim="3" id="Gnnn"/>
            <populationType spec='PopulationType' typeName="Gaab" dim="3" id="Gmmn"/>
            <populationType spec='PopulationType' typeName="Gabb" dim="3" id="Gmnn"/>
            <populationType spec='PopulationType' typeName="Gbab" dim="3" id="Gnmn"/>
            <populationType spec='PopulationType' typeName="Gbaa" dim="3" id="Gnmm"/>
            <populationType spec='PopulationType' typeName="Gaba" dim="3" id="Gnmn"/>
            <populationType spec='PopulationType' typeName="Gbba" dim="3" id="Gnnm"/>
            <populationType spec='PopulationType' typeName="Paaa" dim="3" id="Paaa"/>
            <populationType spec='PopulationType' typeName="Pbbb" dim="3" id="Pbbb"/>
            <populationType spec='PopulationType' typeName="Paab" dim="3" id="Paab"/>
            <populationType spec='PopulationType' typeName="Pabb" dim="3" id="Pabb"/>
            <populationType spec='PopulationType' typeName="Pbab" dim="3" id="Pbab"/>
            <populationType spec='PopulationType' typeName="Pbaa" dim="3" id="Pbaa"/>
            <populationType spec='PopulationType' typeName="Paba" dim="3" id="Paba"/>
            <populationType spec='PopulationType' typeName="Pbba" dim="3" id="Pbba"/>
            <populationType spec='PopulationType' typeName="GP1" dim="2 2 2 2 3" id="GP1"/>
            <populationType spec='PopulationType' typeName="GP2" dim="2 2 2 2 2 3" id="GP2"/>

	    	<!-- Nucleotides and amino acids ('food' molecules) -->
            <populationType spec='PopulationType' typeName="n" dim="3" id="n"/>
            <populationType spec='PopulationType' typeName="aa" dim="3" id="aa"/>
            
            <!-- Space -->
            <populationType spec='PopulationType' typeName="SG" dim="3" id="SG"/>
            <populationType spec='PopulationType' typeName="SP" dim="3" id="SP"/>

            <!-- Hamming distance between two vectors -->
            <function spec='Function' id="HD" params="x y" value="sum(abs(x-y))"/>
            
            <!-- The Poisson probability distribution, n outcomes given expectation lambdat -->
            <function spec='Function' id="dpois" params="n lambdat" value="exp(-lambdat)*lambdat^n/n!"/>
            
	    <!-- Translation enzyme lookup: i is nucleotide, a is amino acid, returns optimal protein catalyst sequence 
            <function spec='Function' id="key" params="i a">
                <![CDATA[
                  i==0 && a==0 ?  {1,0,1}
                : i==1 && a==1 ?  {0,1,0}
                : i==0 && a==1 ?  {0,0,1}
                :                 {1,1,0}
                ]]>
            </function> -->

            <!-- Replication reaction -->
            <reaction spec='Reaction' reactionName="Replication" rate="1">
                	Gmmm + Pab + m + m + m ->  
                	Gmmm + Pab + Gmmm
            </reaction>
            <reaction spec='Reaction' reactionName="Replication1" rate="1">
                	Gnnn + Pab + n + n + n ->  
                	Gnnn + Pab + Gnnn
            </reaction>
            <reaction spec='Reaction' reactionName="Replication2" rate="1">
                	Gmmn + Pab + m + m + n ->  
                	Gmmn + Pab + Gmmn
            </reaction>
            <reaction spec='Reaction' reactionName="Replication3" rate="1">
                	Gmnn + Pab + m + n + n ->  
                	Gmnn + Pab + Gmnn
            </reaction>
            <reaction spec='Reaction' reactionName="Replication4" rate="1">
                	Gnnm + Pab + n + n + m ->  
                	Gnnm + Pab + Gnnm
            </reaction>
            <reaction spec='Reaction' reactionName="Replication5" rate="1">
                	Gnmm + Pab + n + m + m ->  
                	Gnmm + Pab + Gnmm
            </reaction>
            <reaction spec='Reaction' reactionName="Replication6" rate="1">
                	Gmnm + Pab + m + n + m ->  
                	Gmnm + Pab + Gmnm
            </reaction>
            <reaction spec='Reaction' reactionName="Replication7" rate="1">
                	Gnmn + Pab + n + m + n ->  
                	Gnmn + Pab + Gnmn
            </reaction>
                        
            <!-- Translation reactions -->
            <reaction spec='Reaction' reactionName="Replication" rate="1">
                	Gmmm + Paaa + Paaa + Paaa + a + a + a ->  
                	Gmmm + Paaa + Paaa + Paaa + Paaa
            </reaction>
            <reaction spec='Reaction' reactionName="Replication1" rate="1">
                	Gnnn + Pbbb + Pbbb + Pbbb + b + b + b ->  
                	Gnnn + Pbbb + Pbbb + Pbbb + Paaa
            </reaction>
            <reaction spec='Reaction' reactionName="Replication2" rate="1">
                	Gmmn + Paaa + Paaa + Pbbb + a + a + b ->  
                	Gmmn + Paaa + Paaa + Pbbb + Paab
            </reaction>
            <reaction spec='Reaction' reactionName="Replication3" rate="1">
                	Gmnn + Paaa + Pbbb + Pbbb + a + b + b ->  
                	Gmnn + Paaa + Pbbb + Pbbb + Pabb
            </reaction>
            <reaction spec='Reaction' reactionName="Replication4" rate="1">
                	Gnmm + Pbbb + Paaa + Paaa + b + a + a ->  
                	Gnmm + Pbbb + Paaa + Paaa + Pbaa
            </reaction>
            <reaction spec='Reaction' reactionName="Replication5" rate="1">
                	Gnnm + Pbbb + Pbbb + Paaa + b + b + a ->  
                	Gnnm + Pbbb + Pbbb + Paaa + Pbba
            </reaction>
            <reaction spec='Reaction' reactionName="Replication6" rate="1">
                	Gmnm + Paaa + Pbbb + Paaa + a + b + a ->  
                	Gmnm + Paaa + Pbbb + Paaa + Paba
            </reaction>
            <reaction spec='Reaction' reactionName="Replication7" rate="1">
                	Gnmn + Pbbb + Paaa + Pbbb + b + a + b ->  
                	Gnmn + Pbbb + Paaa + Pbbb + Pbab
            </reaction>
                        
            <!-- Diffusion (migration) reactions -->
            <reaction spec='Reaction' reactionName="Diffusion_G" rate="0.05">
                <predicate spec='Predicate' value="abs(l1-l2)==1 || abs(l1-l2)==2"/>
                	G[i1,i2,i3,l1] + SG[l2] -> G[i1,i2,i3,l2] + SG[l1]
            </reaction>
            <reaction spec='Reaction' reactionName="Diffusion_P" rate="0.05">
                <predicate spec='Predicate' value="abs(l1-l2)==1 || abs(l1-l2)==2"/>
                	P[a1,a2,a3,l1] + SP[l2] -> P[a1,a2,a3,l2] + SP[l1]
            </reaction>

            <!-- Degradation reactions -->  
            <reaction spec='Reaction' reactionName="DeathToG" rate="1">
                G[i1,i2,i3,l1] -> SG[l1]
            </reaction>
            <reaction spec='Reaction' reactionName="DeathToP" rate="1">
                P[a1,a2,a3,l1] -> SP[l1]
            </reaction> 
        </model>

        <initialState spec='InitState'>
        	
        	<!-- Nucleotides -->
            <populationSize spec='PopulationSize'>
                SG[l1] := 200
            </populationSize>            

			<!-- Amino acids -->
            <populationSize spec='PopulationSize'>
                SP[l1] := 500
            </populationSize>            
                        
            <!-- Genomes -->
			<populationSize spec='PopulationSize'>
				Gaaa[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Gbbb[l1] := 10
			</populationSize>	
			<populationSize spec='PopulationSize'>
				Gaab[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Gabb[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Gaba[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Gbab[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Gbaa[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Gbba[l1] := 10
			</populationSize>		
	
			<!-- Proteins -->
			<populationSize spec='PopulationSize'>
				Pbbb[l1] := 10
			</populationSize>	
			<populationSize spec='PopulationSize'>
				Paab[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Pabb[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Paba[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Pbab[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Pbaa[l1] := 10
			</populationSize>
			<populationSize spec='PopulationSize'>
				Pbba[l1] := 10
			</populationSize>
			
			<populationSize spec='PopulationSize'>
				Paaa[l1] := 600
			</populationSize>
	
			<!-- Genome-Protein complexes -->
            <populationSize spec='PopulationSize'>
                GP1[i1,i2,i3,e1,l1] := 0
            </populationSize>
            <populationSize spec='PopulationSize'>
                GP2[i1,i2,i3,e1,e2,l1] := 0
            </populationSize>

        </initialState>
        
        <output spec='JsonOutput' fileName='$(filebase)_output.json'/>
    </run>
</beast>